@import "bootstrap-sprockets";
@import "bootstrap";
@import "font-awesome-sprockets";
@import "font-awesome";

//COLORS

//GRAYS
$alabaster: #f9f9f9; //white-ish
$wild-sand: #f4f4f4; //white-touch of gray
$alto: #d3d3d3; //unclickable gray color
$silver: #b8b8b8; //good for alto:hover
$boulder: #767676; //darker gray
$tundora: #363636; //darkest gray

$carnation: #FD5C63; //pink;
$light-carnation: #fff5f6;
$dark-carnation: #e1494f;
$neon-green: #39FF14;
 
//SCREEN SIZES
$screen-lg-min: 1200px;
$screen-md-min: 992px;
$screen-sm-min: 768px;
 
#main{
	font-family: 'Raleway', sans-serif;
}
#landingBg{
	background-image: url("<%= asset_path('bg_beer_scene_desktop_low_res.jpg') %>");
	background-repeat: no-repeat;
	background-size:cover;
	height:600px;
	height:100vh;
	padding:8em 0em 0em 0em;
}
#editBatchContainer{
	max-width: 800px;
	position:relative;
}
.display-none{
	display:none;
}
h2{
	font-size: 1.2em !important;
	span{
		font-weight:800;
	}
}
h3{
	padding-top: 0.5em;
}
.box-with-shadow{
  background: $alabaster;
  box-shadow: 0 1px 4px rgba(0,0,0,.24);
  border-radius: 0.3em;
	margin: 0px 0px 1.4em 0px;
	max-width:25em;
}
.box-with-shadow:hover{
  box-shadow: 0 3px 10px rgba(0,0,0,.23);
}
.center-block{
	margin-left: auto;
	margin-right:auto;
	left:0;
	right:0;
}
.hand-on-hover:hover{
	cursor: hand;
	cursor: pointer;
}
.main-menu-item{
	height:200px;
	text-align:center;
}

//STEPS
#navInfoBar{
	display:inline-block;
	max-width: 800px;
	position: fixed;
	text-align:right;
	top: 70px;
	width: 100%;
	div{
		display:inline-block;
		width:100px;
	}
}
.step-container{
	border: 1px solid black;
	border-radius: 4px;
	margin-bottom: 10px;
	h2{
		margin: 0.5em 1em 0.5em 1em;
	}
	.step-content{
		height:0px;
		overflow: hidden;
	}
	.step-content.active{
		overflow: hidden;
		animation:expand-step 0.5s forwards ease-out;
	}
}
@keyframes expand-step{
	0%{
		height:0px;
	}
	100%{
		height:200px;
		padding:2em;
	}
}

//DEVISE FORMS
.registration-form{
	border:1px solid $boulder;
	border-radius:3px;
	color: $boulder;
	height:3.5em;
	margin: 0.2em 1em 0.2em 0em;
	padding:0.5em;
	width:100%;
}
#signUpContainer, #logInContainer{
	background-color: rgba(255,255,255,0.8);
	border-radius: 4px;
	margin-bottom: 10em;
	max-width: 500px;
	padding:1em;
	width: 100%;
	h2{
		text-align:center;
	}
}
#new_user, #new_session{
	input{
		background-size:40px 171px;
		background-image: url("<%= asset_path('form_icons.png') %>");
		background-repeat: no-repeat;
		font-size:16px;
		letter-spacing:1.3px;
		padding-right: 4em;
	}
	#jobDescription, #addressLineOne, #addressLineTwo, #city, #state, #zip{
		background-image: none;
	}
	label{
		font-size: 16px;
		font-weight:normal;
		letter-spacing: 1.3px;
		padding: 0.5em;
	}
}
#forgotPasswordLink{
	border-bottom: 1px solid #fff;
	color: #09979c;
	float:right;
	font-size:0.8em;
	margin-bottom:1em;
	margin-top:0.4em;
}
#forgotPasswordLink:hover{
	border-bottom: 1px solid #09979c;
}
#firstName, #lastName{
	background-position:right 16px;
}
#emailAddress{
	background-position:right -34px;
}
#password, #confirmPassword{
	background-position:right -84px;
}
input.profile-photo-upload{
	display:inline;
  height:190px;
	left: 0px;
	position:absolute;
	top: 0px;
	width:150px;
}
input.profile-photo-upload:hover{
  cursor:hand;
  cursor:pointer;
}
input.image-upload{
	color:$silver;
	text-align:center;
	width: 12em;	
	z-index: 10 !important;
}
.edit-block-header, .edit-block-footer{
	background-color: $wild-sand;
	height: 250px;
	padding: 2em;
	position: relative;
	text-align:center;
	div p {
		color: $silver;
	}
	div:hover p{
		color: $boulder;
	}
	div i.fa-user-circle-o{
		color: $silver;
	}
	div:hover i.fa-user-circle-o{
		color: $boulder;
	}
	.fa-user-circle-o.large{
		font-size: 120px;
	}
} 
.edit-block-content-border{
	border-top: 1px solid $silver;
	border-bottom: 1px solid $silver;
	width: 100%;
}
.edit-block-content{
	width: 400px;
	div{
		margin-top:1em;
		text-align:left;
	}
	div div{
		display:inline-block;
		margin-top:0em;
		padding-top:0px;
		text-align:center;
		width: 5em;
	}
	div p, div .profile-input-field{
		border-style:none;
		box-shadow:none;
		display:inline-block;
		line-height:2.5em;
		margin-bottom: 0;
		padding-bottom: 0.5em;
		vertical-align:top;
	}
	div p{
		border-bottom: 1px solid $wild-sand;
		width: 70%;
	}
	div .profile-input-field{
		border-bottom: none;
		width: 100%;
	}
	div p.unfilled{
		color: $silver;
	}
	div:last-child p{
		border-bottom: none;
	}
	div .fa{
		color: $boulder;
		display: inline;
		font-size: 30px;
	}
	.profile-input-field:focus{
		text-decoration: none;
		outline-width: 0;
	}
	.input-container{
		border-bottom: 1px solid $wild-sand;
		position: relative;
		vertical-align:top;
		width: 70%;
		i{
			position:absolute;
			right: 0;
			top: 5px;
		}
	}
}
.page-block{
	max-width: 800px;
	width: 100%;
	.nav-block{
		width: 100%;
	}
	.nav-block div:first-child, .nav-block div:last-child{
		width: 15%;
	}
	.nav-block div{
		display:inline-block;
		text-align:center;
		width: 70%;
	}
	h3{
		margin: 1em;
	}
}
.page-block-border{
	border-bottom: 1px solid $wild-sand;
	border-left: 1px solid $wild-sand;
	border-right: 1px solid $wild-sand;
}
.page-block-padded{
	padding: 0 1em 1em 1em;
}
//MEDIA QUERIES

/* Small devices (tablets, 768px and down) */
@media (max-width: $screen-sm-min) { 
	#landingBackgroundImage{
		background-image: url("<%= asset_path('bg_beer_scene_low_res.jpg') %>");
	}
	.devise-form-container{
		left: 30%;
	}
}

/* Medium devices (desktops, 992px and down) */
@media (max-width: $screen-md-min) { 

}

/* Large devices (large desktops, 1200px and down) */
@media (max-width: $screen-lg-min) { 
	
}

@media (min-width: $screen-lg-min) { 
	.devise-form-container{
		left: 27%;
	}
}
